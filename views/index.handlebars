<div class="container">
  <div class="row">
    <div class="col-lg-12 logo">
      <div>
        <div class="top-bun"></div>
        <h1 id="title">Burger List</h1>
        <div class="bottom-bun"></div>
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="col-lg-6 food">
      <h2 class="burger-status">Yeah, I've had it.</h2>
      <hr>
      <ul id="eaten">
        {{#each burgers}} {{#if this.devoured}}
        <li>
          {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
    <div class="col-lg-6 food">
      <h2 class="burger-status">Still gotta try...</h2>
      <hr>
      <ul id="notEaten">
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          <span>{{this.id}}. {{this.burger_name}}</span>
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="eat-me" type=" submit">Eat Meeee!</button>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>

  </div>

  <div class="col-lg-3">
    <h2 class="burger-status">Add a Burger!</h2>
    <hr>
    <div class="new-burger">
      <p>What buergers do you want to try?</p>
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group form-actions">
          <textarea style="height: 30px" type="text" id="burger_name" name="burger_name" cols="30"></textarea>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">Submit</button>
      </form><br>
      
    </div>
  </div>
</div>