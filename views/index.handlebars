<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <img id="daburger" class="text-center" width="100px" src="http://pre00.deviantart.net/976a/th/pre/i/2013/088/c/e/double_burger_by_rottenpot-d5znea9.png">
      <h3 id="title">Eat-Da-Burger!</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <ul id="notEaten">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour it!</button>
              </form>
              <span>{{this.id}}. {{this.burger_name}}</span>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <ul id="eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}. {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <textarea type="text" id="burger_name" name="burger_name" cols="30"></textarea>
        </div>
        <button class="btn btn-sm btn-primary" type="submit">Submit</button>
      </form><br>
      <p>Enter a burger you want to eat, then click the "Submit" button.</p>
    </div>
  </div>
</div>
